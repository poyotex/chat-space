.message
  .message-info
    .message-info__name
      = message.user.name
    .message-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .post-message
    - if message.content.present?
      %p.post-message__content
        = message.content
    = image_tag message.image.url, class: 'post-message__image' if message.image.present?